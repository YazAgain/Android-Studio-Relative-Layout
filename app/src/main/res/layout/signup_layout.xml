<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dark">

    <TextView
        android:id="@+id/tx_Hi"
        android:layout_width="304dp"
        android:layout_height="wrap_content"
        android:text="Sign up"
        android:layout_above="@id/lay_signup"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:layout_marginBottom="15dp"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:id="@+id/lay_signup">

        <TextView
            android:id="@+id/tx_noaccount"
            android:layout_width="304dp"
            android:layout_height="wrap_content"
            android:text="Looks like you don't have an account."
            android:textColor="@color/white"
            android:textSize="15sp"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/tx_createaccount"
            android:layout_width="304dp"
            android:layout_height="wrap_content"
            android:text="Let's create an account for jane.doe@gmail.com"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/tx_noaccount"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:id="@+id/tx_email_address_signup"
            android:layout_width="304dp"
            android:layout_height="30dp"
            android:background="@color/white"
            android:hint="Name"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_below="@id/tx_createaccount"
            android:layout_marginBottom="10dp"/>
        <EditText
            android:id="@+id/tx_create_email_password"
            android:layout_width="304dp"
            android:layout_height="30dp"
            android:background="@color/white"
            android:hint="Password"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_below="@id/tx_email_address_signup"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/tx_termsAndConditions"
            android:layout_width="304dp"
            android:layout_height="wrap_content"
            android:text="By accepting Agree and continue below,
            I agree to Terms of Service and Privacy Policy"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/tx_create_email_password"
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/bt_continue"
            android:layout_width="304dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#00AD83"
            android:layout_below="@+id/tx_termsAndConditions"
            android:text="Agree and continue"
            android:layout_marginBottom="10dp"/>
    </RelativeLayout>

</RelativeLayout>